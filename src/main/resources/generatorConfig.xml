<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- update to your location -->
    <classPathEntry location="C:\Users\liuyang\.m2\repository\mysql\mysql-connector-java\5.1.46\mysql-connector-java-5.1.46.jar" />

    <context id="mysqlTables" targetRuntime="MyBatis3">
        <!-- database config -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mybatis"
                        userId="sboot"
                        password="123123">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- model location -->
        <javaModelGenerator targetPackage="com.lerr.demo.model.gen" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- mapper location -->
        <sqlMapGenerator targetPackage="mybatis.mapper.xml.gen"  targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- dao location -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.lerr.demo.mapper.dao.gen"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- where all your table -->
        <table tableName="person" domainObjectName="Person">
        </table>

    </context>
</generatorConfiguration>